<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:elevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtdanhsachindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:text="1"
            android:textColor="#7E7D7D"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewDanhSachBaiHat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/txtdanhsachindex"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="5dp"
            app:contentPadding="1dp">

            <ImageView
                android:id="@+id/imvdscacbaihat"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/txtdanhsachindex" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/txttenbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/cardViewDanhSachBaiHat"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:text="Đừng Chờ Anh Nữa"
            android:textColor="@color/cardview_dark_background"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txttencasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txttenbaihat"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/cardViewDanhSachBaiHat"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:text="Noo Phước Thịnh"
            android:textColor="#7E7D7D"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imvluotthichdanhsachbaihat"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/iconlove" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>